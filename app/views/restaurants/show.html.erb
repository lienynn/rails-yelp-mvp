<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%=  @restaurant.category %></p>

<%= link_to "Create new review", new_restaurant_review_path(@restaurant) %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= "Comment:" %><%= review.content %> <%= "Rating:" %><%=review.rating %></li>
  <% end %>
</ul>
